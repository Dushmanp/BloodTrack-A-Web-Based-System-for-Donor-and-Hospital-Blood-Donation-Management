@{
    ViewData["Title"] = "Dashboard";
      ViewData["DashboardActive"] = "active";
}

 
<div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
    <div>
        <h4 class="mb-3 mb-md-0">Welcome to Online Blood Bank</h4>
    </div>
    <div class="d-flex align-items-center flex-wrap text-nowrap">
        <div class="input-group date datepicker dashboard-date mr-2 mb-2 mb-md-0 d-md-none d-xl-flex" id="dashboardDate">
            <span class="input-group-addon bg-transparent"><i data-feather="calendar" class=" text-danger"></i></span>
            <input type="text text-danger" class="form-control">
        </div>

    </div>
</div>
<div class="d-block d-md-none">
    <div class="row">
        <div class="col-6">
            <a asp-area="Donor"
               asp-controller="DonarDonation"
               asp-action="Add"
               class="btn btn-outline-primary btn-icon-text mb-2">
                <i class="link-icon" data-feather="plus-circle"></i>
                <span class="link-title">New Donation</span>
            </a>
        </div>

        <div class="col-6">
            <a asp-area="Donor"
               asp-controller="ProfileInfo"
               asp-action="Index"
               class="btn btn-outline-success btn-icon-text mb-2">
                <i class="link-icon" data-feather="user"></i>
                <span class="link-title">Profile Info</span>
            </a>
        </div>

        <div class="col-6">
            <a asp-area="Donor"
               asp-controller="DonarDonation"
               asp-action="Index"
               class="btn btn-outline-danger btn-icon-text mb-2">
                <i class="link-icon" data-feather="activity"></i>
                <span class="link-title">Donation Detail</span>
            </a>
        </div>

        <div class="col-6">
            <a asp-area="Donor"
               asp-controller="Campaign"
               asp-action="Index"
               class="btn btn-outline-warning btn-icon-text mb-2">
                <i class="link-icon" data-feather="flag"></i>
                <span class="link-title">Campaign Detail</span>
            </a>
        </div>

        <div class="col-6">
            <a asp-area="Donor"
               asp-controller="BloodRequest"
               asp-action="Index"
               class="btn btn-outline-info btn-icon-text mb-2">
                <i class="link-icon" data-feather="heart"></i>
                <span class="link-title">Donation Request Detail</span>
            </a>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>

       $(document).ready(function() {
            if ($('#dashboardDate').length) {
                var date = new Date();
                var options = { day: 'numeric', month: 'long', year: 'numeric' };
                var formattedDate = date.toLocaleDateString('en-US', options);
                $('#dashboardDate').datepicker({
                format: "dd-M-yyyy",
                todayHighlight: true,
                autoclose: true
                }).datepicker('setDate', formattedDate);
            }
        });

    </script>
}