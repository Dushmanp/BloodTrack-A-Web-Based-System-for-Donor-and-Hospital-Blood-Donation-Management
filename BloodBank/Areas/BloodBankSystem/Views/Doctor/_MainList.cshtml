@model IEnumerable<DoctorInfo>

@{
    Layout = null;
}

<div class="table-responsive">
    <table class="table table-centered table-nowrap table-striped">
        <thead>
            <tr>
                <th class="d-none">@Html.DisplayNameFor(model => model.First().DoctorID)</th>
                <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
                <th class="d-none">@Html.DisplayNameFor(model => model.First().UserName)</th>
                <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                <th>@Html.DisplayNameFor(model => model.First().PhoneNumber)</th>
                <th class="d-none">@Html.DisplayNameFor(model => model.First().BloodBankCentreID)</th>
                <th>@Html.DisplayNameFor(model => model.First().Specialty)</th>
                <th>@Html.DisplayNameFor(model => model.First().LicenseNumber)</th>
                <th class="d-none">@Html.DisplayNameFor(model => model.First().LicenseExpirationDate)</th>
                <th class="d-none">@Html.DisplayNameFor(model => model.First().DateOfBirth)</th>
                <th>@Html.DisplayNameFor(model => model.First().Gender)</th>
                <th class="d-none">@Html.DisplayNameFor(model => model.First().Address)</th>
                <th style="width:70px;">Action</th>
            </tr>
        </thead>
        <tbody id="tblBody">
            @foreach (var item in Model)
            {
                <tr id="row_@item.DoctorID">
                    <td class="d-none">@Html.DisplayFor(modelItem => item.DoctorID)</td>
                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td class="d-none">@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td class="d-none">@Html.DisplayFor(modelItem => item.BloodBankCentreID)</td>
                    <td>@Html.DisplayFor(modelItem => item.SpecialtyText)</td>
                    <td>@Html.DisplayFor(modelItem => item.LicenseNumber)</td>
                    <td class="d-none">@Html.DisplayFor(modelItem => item.LicenseExpirationDate)</td>
                    <td class="d-none">@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                    <td>@Html.DisplayFor(modelItem => item.GenderText)</td>
                    <td class="d-none">@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.DoctorID })" class="table-icon text-primary"><i class="mdi mdi-square-edit-outline"></i></a>
                        <a href="javascript:void(0);" onclick="ConfirmDelete('@item.DoctorID','@Url.Action("Delete")')" class="table-icon text-danger"> <i class="mdi mdi-delete"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>